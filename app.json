{
  "expo": {
    "name": "PantrySense",
    "slug": "PantrySense",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "pantrysense",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "PantrySense uses Bluetooth to connect to smart kitchen containers.",
        "NSLocationWhenInUseUsageDescription": "PantrySense needs your location to detect nearby BLE devices.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.kabeerhadi.PantrySense"
    },
    "android": {
      "package": "com.kabeerhadi.PantrySense",
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN"
      ]
    },
    "web": {
      "favicon": "./src/assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./src/assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "react-native-ble-plx",
        {
          "bluetoothAlwaysPermission": "PantrySense uses Bluetooth to connect to smart containers.",
          "modes": [
            "central"
          ],
          "backgroundModes": [
            "bluetooth-central"
          ]
        }
      ],
      [
        "react-native-permissions",
        {
          "ios": {
            "locationWhenInUsePermission": "PantrySense needs location to scan BLE devices."
          },
          "android": {
            "bluetoothConnectPermission": "Bluetooth connection required for scanning and control.",
            "bluetoothScanPermission": "PantrySense needs permission to scan for Bluetooth devices.",
            "accessFineLocationPermission": "Location is used to find nearby BLE devices."
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "4ac208d7-262a-4759-9fda-001200cd9a6d"
      }
    }
  }
}
